{
  "name": "OpenExtractionWorks",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean -y && lerna run clean",
    "reset": "npm run clean && lerna bootstrap",
    "cyclic-check": "lerna --concurrency 1 exec --stream -- madge --circular dist",
    "build": "lerna run --stream build",
    "rollup": "lerna run --stream rollup",
    "lint": "lerna run --stream lint",
    "test": "lerna run -stream test",
    "deps:check": "lerna --concurrency 1 exec --stream -- ncu",
    "deps:update": "lerna --concurrency 1 exec --stream -- ncu -u && lerna bootstrap"
  }
}
